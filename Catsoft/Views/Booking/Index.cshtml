@inject CatsoftContext DbCatsoftContext
@using App.cms.Options
@using App.cms.StaticHelpers.Cookies
@using App.Models
@using App.ViewModels.Book
@using App.ViewModels.PreOrder
@model App.ViewModels.Booking.BookingPageViewModel
@inject ILocalOptionsCookieRepository LocalOptionsCookieRepository


@{
    Layout = "_Layout";
}

@if (!LocalOptionsCookieRepository.BookingEnabled())
{
    @await Html.PartialAsync("SoonBookBlock", new BookDto())

    @await Html.PartialAsync("PreOrder", new PreOrderDto())
}
else
{
    @await Html.PartialAsync("Booking/BookBlock", Model)
}