@inject Context DbContext
@using App.Models
@model App.ViewModels.Blog.BlogPageViewModel

@{
    Layout = "_Layout";
}

<div class="container">
    <div class="col-md-10 offset-md-1">
        <div class="row row-cols-md-2">
            @foreach (var article in Model.ArticleModels)
            {
                @await Html.PartialAsync("SingleArticle", article)
            } 
        </div>
    </div>
</div>
