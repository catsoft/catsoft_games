                 format("svg");
        }
    </style>

    <script type="text/javascript">
            let currentPageIdTemplate = 'sitePage1';
            let currentModuleTemplate = 'index';
    </script>

    <link rel="stylesheet" href="fonts/icomoon/style.css">

    <link rel="stylesheet" href="fonts/flaticon/font/flaticon.css">
