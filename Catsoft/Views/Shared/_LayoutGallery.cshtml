<html lang="ru" prefix="og: http://ogp.me/ns#">
<head>

    @await Html.PartialAsync("YandexMetrica")

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <title>@headerViewModel?.MetaInfo?.MetaTitle</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <meta property="og:title" content="@headerViewModel?.MetaInfo?.MetaTitle">
    <meta property="og:description" content="@headerViewModel?.MetaInfo?.MetaDescription">
    <meta name="Keywords" content="@headerViewModel?.MetaInfo?.KeyWords">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <link href="https://fonts.googleapis.com/css?family=Quicksand:300,400,500,700,900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Material+Icons|Cousine:400,700&amp;subset=cyrillic" rel="stylesheet" type="text/css"/>
