        <select style="font-family: 'Noto Color Emoji'" class="form-select .form-select-lg" aria-label=".form-select-lg" data-style="btn btn-primary" onchange="changeLanguage()">
            @foreach (var language in languages)
            {
                var flag = "";
                switch (language)
                {
                    case TextLanguage.English:
                        flag = "gb";
                        break;
                    case TextLanguage.Russian:
                        flag = "ru";
                        break;
                    case TextLanguage.Portuguese:
                        flag = "pt";
                        break;
                }
                var emoji = flag.IsoCountryCodeToFlagEmoji();
                <option style="font-family: 'Noto Color Emoji'" value="@language" @(currentLanguage == language ? "selected" : "")>@emoji @language</option>
            }
        </select>

        <script>
            function changeLanguage() {
                var language = document.querySelector("select").value;

                var url = new URL(window.location.href);

                if (url.searchParams.has('language')) {
                    url.searchParams.set('language', language);
                } else {
                    url.searchParams.append('language', language);
                }
                window.location.href = url.toString();
            }
        </script>
