@inject CatsoftContext DbCatsoftContext
@using System.Globalization
@using App.cms.Models
@using App.cms.Repositories.TextResource
@using App.cms.StaticHelpers.Cookies
@using App.Models
@using Options = App.cms.Options.Options
@model App.ViewModels.Booking.BookingPageViewModel
@inject TextResourceRepository TextResourceRepository

@{
    Layout = null;

    var groupsByDate = Model.AvailableAppointTimes.GroupBy(x => x.AppointTime.Date).OrderBy(w => w.Key).ToList();

    var language = CookieHelper.GetLanguage(Context);
    var ci = new CultureInfo(language.GetCulturalCode());
    var places = " " + await TextResourceRepository.GetByTag(Context, "places");

    var selection = CookieHelper.GetBookingSelection(Context);
}
@if (Options.IsBookingEnabled)
{
    @await Html.PartialAsync("Booking/BookSelectionBlock", Model)

    
    <div class="container-fluid text-center">
        <div class="container py-5" id="order">

            @foreach (var booking in groupsByDate)
            {
                <div class="row pt-5">
                    <p>
                        <span class="fw-bold fs-3 text-center">@booking.Key.ToString("dddd, dd MMMM", ci)</span>
                    </p>
                </div>
                <div class="row">
                    @{
                        var times = booking.GroupBy(w => w.AppointTime.TimeStart).OrderBy(w => w.First().AppointTime.TimeStart).ToList();
                    }
                    @foreach (var time in times)
                    {
                        var timeValue = time.First();
                        var count = time.Count();
                        var isSelected = selection.SelectedAppointTimeIds.Contains(timeValue.AppointTime.Id);
                        var color = isSelected ? "bg-primary" : "bg-dark";

                        <div class="col rounded @color text-white py-2 me-3 mb-3 time-selection pe-auto"
                             role="button"
                             datauuid="@timeValue.AppointTime.Id.ToString()">
                            <p>
                                <span class="fs-6 text-center">@(count + places)</span>
                                <br/>
                                <span class="fw-bold fs-4 text-center">@timeValue.AppointTime.TimeStart</span>
                                <br/>
                                <span class="fw-bold fs-4 text-center">@timeValue.AppointTime.TimeEnd</span>
                                <br/>
                                <span class="fs-6 text-center">@(timeValue.AppointTime.FormattedPrice())</span>
                            </p>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('.time-selection').click(function () {
                var uuid = $(this).attr('datauuid');
                var url = '@Url.Action("SelectAppointTime", "Booking")';
                var data = {
                    uuid: uuid
                };
                $.post(url, data, function () {
                    location.reload();
                });
            });
        });
    </script>
}