@inject CatsoftContext DbCatsoftContext
@using App.cms.Helpers
@using App.cms.Repositories.TextResource
@using App.cms.StaticHelpers.Cookies
@using App.Models
@using Options = App.cms.Options.Options
@model App.ViewModels.Booking.BookingPageViewModel
@inject TextResourceRepository TextResourceRepository
@inject IBookingSelectionCookieRepository bookingSelectionCookieRepository
@inject ILanguageCookieRepository LanguageCookieRepository

@{
    Layout = null;

    var selection = bookingSelectionCookieRepository.GetValue();

    var selectedTimes = Model.AvailableAppointTimes
        .Where(w => selection.SelectedAppointTimeIds.Contains(w.AppointTime.Id))
        .OrderBy(w => w.AppointTime.Date)
        .ThenBy(w => w.AppointTime.TimeStart)
        .ToList();

    var options = Enumerable.Range(1, 4);


    var sum = selectedTimes.Sum(w => w.AppointTime.Price) * selection.PeopleCount;

    var totalSum = " " + await TextResourceRepository.GetByTagAsync("total sum: " + Options.Currency + sum);
}
@if (Options.IsBookingEnabled)
{
    <div class="container-fluid text-center bg-info text-white">
        <div class="container py-5" id="booking_selected">
            <div class="row pb-2">
                <p>
                    <span class="fw-bold fs-3 text-center">@await Html.RenderText("Selected times")</span>
                </p>
            </div>

            <div class="row text-center">
                <span class="fs-3 col-2 text-center">@await Html.RenderText("Person count")</span>
                <div class="col-2 offset-1">
                    <select class="form-select" aria-label="@await TextResourceRepository.GetByTagAsync("Select stations count")" onchange="changeSelection(this)">
                        @foreach (var i in options)
                        {
                            var selected = i == selection.PeopleCount ? "selected" : "";
                            <option value="@i" selected="@selected">@i</option>
                        }
                    </select>
                </div>

                <div class="col-4 offset-2 text-white fs-3 pb-3 fw-bold text-center">
                    @totalSum
                </div>
            </div>

            @{
                await Html.RenderPartialAsync("Shared/Booking/SelectedTimes", Model.AvailableAppointTimes);
            }

            <form class="pt-5" asp-action="EnterPersonDetails" asp-controller="Booking" method="post" enctype="multipart/form-data">
                <button type="submit" class="btn btn-primary rounded-pill pb-2 fs-3 pe-5 ps-5 text-center" style="min-width: 350px;">
                    @await Html.RenderText("Reserve now")
                </button>
            </form>
        </div>
    </div>

    <script>
        function changeSelection(selected) {
            var url = '@Url.Action("SetPersonCount", "Booking")';
            var data = {
                personCount: selected.value
            };
            $.post(url, data, function () {
                location.reload();
            });
        }
    </script>
}