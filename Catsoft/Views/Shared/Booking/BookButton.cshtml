@inject CatsoftContext DbCatsoftContext
@using App.cms.Repositories.TextResource
@using App.Models
@using Options = App.cms.Options.Options
@inject TextResourceRepository TextResourceRepository

@{
    Layout = null;
    var bookText = await TextResourceRepository.GetByTagAsync("Book and enjoy now");
}
@if (Options.IsBookingEnabled)
{
    <form asp-action="Index" method="get" asp-controller="Booking">
        <div class="d-flex justify-content-center text-center">
            <input type="submit" class="btn btn-primary rounded-pill pb-2 fs-3 pe-5 ps-5 text-center" value="@bookText" style="min-width: 350px;"/>
        </div>
    </form>
}