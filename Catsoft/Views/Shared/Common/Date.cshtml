@inject CatsoftContext DbCatsoftContext
@using App.cms.Helpers
@using App.Models
@using App.Utils
@model App.ViewModels.Views.DateViewModel

@{
    Layout = null;
    var value = Model.Date?.ToString("yyyy-MM-dd");
    var disabled =  Model.Enabled ? "" : "disabled";
}

<div>
    <label for="@(Model.NameTag.RemoveWhitespace())">
        @await Html.RenderText(Model.NameTag)
    </label>
    <input data-val="true"
           class="input form-control"
           id="@(Model.NameTag.RemoveWhitespace())"
           name="@(Model.NameTag.RemoveWhitespace())"
           type="date"
           value="@value"
           onchange="@Model.OnChangeOnChangeScript"
           @disabled>
</div>
