@inject CatsoftContext DbCatsoftContext
@using App.cms.Helpers
@using App.cms.Repositories.TextResource
@using App.Models
@model App.ViewModels.Projects.ProjectsPageViewModel
@inject TextResourceRepository Repository

@{
    Layout = null;
}

<div class="about-us" id="projects">
    <div class="container">
        <h3 class="title">@await Html.RenderText("My works")</h3>
        <div>
            @Html.Raw(Model.Page.ServicesText)
        </div>
    </div>
    
    @await Html.PartialAsync("Projects", Model.ProjectModels)

    <h4 class="text-center"><strong>
        @Html.ActionLink(Repository.GetByTag("All projects"), "Index", "AllProjects", null, new { @style = "color: black" })
    </strong></h4>
</div>

